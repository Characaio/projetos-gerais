{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Compilar e Rodar (pendrive)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}\\${fileBasenameNoExtension}.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
